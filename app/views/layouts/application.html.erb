<!DOCTYPE html>
<html>
  <head>
    <title>Biblioteka</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= link_to "Stronga Główna", root_path%>
    <% if admin? %>
      <%= link_to "Nowa książka", new_book_path %>
    <% end %>

    <% if user_signed_in? %>
    <%= link_to "Moja Bilbioteka", library_index_path %>
    <%= link_to "Konto", edit_user_registration_path %>
    <%= link_to "Wyloguj się", destroy_user_session_path, method: :delete%>
  <% else %>
    <%= link_to "Zaloguj się", new_user_session_path%>
    <%= link_to "Zarejstruj się", new_user_registration_path%>
  <% end %>

    <%= yield %>
  </body>
</html>
